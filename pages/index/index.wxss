.container {
    position: relative;
    width: 100%;
}

.swiper {
    width: 100%;

}

.swiper_item {
    height: 300rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;

}

.swiper_imge {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
}

.nav {
    display: flex;
    justify-content: space-between;
    padding: 0 15rpx;
    margin: 50rpx 0;

}

.nav image {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 10rpx;
}

.nav .tit {
    display: flex;
    flex-direction: column;
    font-size: 32rpx;
    align-items: center;
}

.list {
    text-align: center;
    padding: 0 15rpx;
}

.list text {
    font-size: 40rpx;
    font-weight: bold;
}